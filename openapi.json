{
  "openapi": "3.0.3",
  "info": {
    "title": "Pokétroc",
    "version": "1.1.0",
    "description": "Application qui permet aux utilisateurs de lister leurs cartes pokémon, de les échanger ainsi que de chercher des cartes qu’ils aimeraient acquérir."
  },
  "paths": {
    "/poketroc/dresserus/connection": {
        "post": {
            "summary": "Connection d’un dresseur----------------------------------------",
            "requestBody": {
                "description": "Les informations d'authentification de l'utilisateur",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "pseudo": {
                                    "type": "string"
                                },
                                "mot_de_passe": {
                                    "type": "string"
                                }
                            },
                            "required": ["pseudo", "mot_de_passe"]
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Connexion réussie",
                    "content": {}
                }
            }
        }
    },
    "/poketroc/dresseurs": {
      "post": {
        "summary": "Inscription à l'application-----------------------------------------------",
        "requestBody": {
            "description": "Les informations d'inscription du dresseur",
            "required": true,
            "content": {
                "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "nom": {
                          "type": "string"
                        },
                        "prenom":{
                          "type": "string"
                        },
                        "pseudo": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "mot_de_passe": {
                          "type": "string"
                        },
                        "age": {
                          "type": "number"
                        },
                        "ville": {
                          "type": "string"
                        }
                      },
                      "required": ["nom", "prenom", "pseudo", "email", "mot_de_passe", "age", "ville"]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Inscription réussie",
                "content": {}
            }
        }
      }
    },
    "/poketroc/dresseurs/deconnexion": {
      "post": {
        "summary": "Deconnexion du compte dresseur-----------------------------------------------",
        "requestBody": {
            "description": "Deconnexion réussie",
            "required": true,
            "content": {
              "application/json": {
                  "schema":{
                      "type":"object",
                      "properties":{
                          "stat_connection": {
                            "type": "boolean"
                          }
                      }
                  },
                  "required": ["stat_connection"]
              }
            }
        }
      }
    },
    "poketroc/profil": {
      "get": {
        "summary": "Afficher profil dresseur-----------------------------------------------------",
        "responses":{
          "200":{
            "description": "Afficher profil",
            "required": true,
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "nom": "string",
                    "prenom": "string",
                    "pseudo": "string",
                    "email": "string",
                    "mot_de_passe": "string",
                    "age": "number",
                    "ville": "string"
                  }
                },
                "required": ["nom", "prenom", "pseudo", "email", "mot_de_passe", "age", "ville"]
              }
            }
          }
        }
      },
      "delete":{
        "summary": "Supprimer profil-------------------------------------------------------------"
      }
    },
    "poketroc/profil/modification/mot-de-passe": {
      "put": {
        "summary": "Modifier le mot de passe-----------------------------------------------------"
      }
    },
    "poketroc/profil/modification": {
      "patch": {
        "summary": "Modifier profil du dresseur-------------------------------------------------"
      }
    }
  }      
}    